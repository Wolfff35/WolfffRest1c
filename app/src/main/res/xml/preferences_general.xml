<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Настройки подключения">

        <EditTextPreference
            android:key="serverName"
            android:summary="Сервер базы данных"
            android:title="Сервер">
        </EditTextPreference>
        <EditTextPreference
            android:key="baseName"
            android:summary="Имя базы 1с"
            android:title="Имя базы">
        </EditTextPreference>
        <EditTextPreference
            android:key="serverLogin"
            android:summary="Имя пользователя базы"
            android:title="Логин">
        </EditTextPreference>
        <EditTextPreference
            android:key="serverPassword"
            android:title="Пароль">
        </EditTextPreference>
     </PreferenceCategory>
    <PreferenceCategory android:title="Отборы задач">

        <SwitchPreference
            android:defaultValue="false"
            android:title="По авторству"
            android:key="iAmAuthor" />
        <SwitchPreference
            android:defaultValue="false"
            android:title="По ответственному"
            android:key="iAmAuthor" />
        <SwitchPreference
            android:defaultValue="false"
            android:title="Не помеченные на удаление"
            android:key="iAmAuthor" />
        <SwitchPreference
            android:defaultValue="false"
            android:title="Не завершенные"
            android:key="iAmAuthor" />
    </PreferenceCategory>
</PreferenceScreen>